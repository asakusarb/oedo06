%section.section#speakers
  .container
    .section__inner
      %header.section__header
        %h1.section__primary-headding
          発表者
      .section__body
        %section.speakers
          .row
            - data.oedo06.speakers.keynotes.each do |id, speaker|
              .col-md-4.col-xs-12
                %h2.speakers__title.is-keynote
                  Keynote
                = partial 'partials/speaker', locals: { speaker: speaker }
            - data.oedo06.speakers.invited.each do |id, speaker|
              .col-md-4.col-xs-12
                %h2.speakers__title.is-invited
                  招待講演
                = partial 'partials/speaker', locals: { speaker: speaker }

        %section.speakers
          %h2.speakers__title
            Ninja Talks
          .row
            - data.oedo06.speakers.ninja_talks.each do |id, speaker|
              .col-md-3.col-xs-12
                = partial 'partials/speaker', locals: { speaker: speaker }
